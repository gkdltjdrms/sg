<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<!DOCTYPE html>
<html>
<head>
    <style>
        label {
            display: block;
        }
    </style>
</head>
<body>
    <label>
        <input type="checkbox" id="selectAll"> 전체
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 서울
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 인천
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 경기
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 강원
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 부산
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 대전
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 전남
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 제주
    </label>
    <label>
        <input type="checkbox" class="selectCity"> 평양
    </label>

    <script>
        // 전체 체크박스
        const selectAll = document.getElementById("selectAll");
        
        // 선택 체크박스들
        const selectCityCheckboxes = document.querySelectorAll(".selectCity");

        // 전체 체크박스가 클릭되었을 때
        selectAll.addEventListener("click", function () {
            for (const checkbox of selectCityCheckboxes) {
                checkbox.checked = selectAll.checked;
            }
        });

        // 선택 체크박스 중 하나라도 해제되면
        for (const checkbox of selectCityCheckboxes) {
            checkbox.addEventListener("click", function () {
                if (![...selectCityCheckboxes].every((checkbox) => checkbox.checked)) {
                    selectAll.checked = false;
                } else {
                    selectAll.checked = true;
                }
            });
        }
    </script>
</body>
</html>

